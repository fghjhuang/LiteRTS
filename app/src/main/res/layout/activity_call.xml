<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hint_foreground_material_dark"
    android:orientation="vertical"
    tools:context="com.huangstudio.androidopus.Callview.CallActivity">

    <LinearLayout
        android:id="@+id/calloutlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/ic_head" />

        <TextView
            android:id="@+id/calloutip"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="192.168.1.107"
            android:textColor="@color/accent_material_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/calloutstate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="正在呼叫..." />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" />

        <ImageView
            android:id="@+id/cancelcall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/selector_refuse" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/callinlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/ic_head" />

        <TextView
            android:id="@+id/callinip"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="192.168.1.107"
            android:textColor="@color/accent_material_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/callinstate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="电话来电，请点击是否接听" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/refusecall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/selector_refuse" />

            <ImageView
                android:id="@+id/acceptcall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/selector_accept" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/accaptlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/ic_head" />

        <TextView
            android:id="@+id/inputip"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="192.168.1.107"
            android:textColor="@color/accent_material_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/callstate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="正在通话中..." />

        <com.huangstudio.androidopus.Callview.MyChronometer
            android:id="@+id/time_counttext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00:23"
            android:textColor="@color/background_floating_material_dark"
            android:textSize="20sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" />

        <ImageView
            android:id="@+id/disconnectcall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/selector_refuse" />
    </LinearLayout>
</LinearLayout>
